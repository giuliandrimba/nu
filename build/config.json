{
  "output":
  {
    "path": "../public"
  },
  "server":
  {
    "port": 3000
  },
  "browserify":
  {
    "path":"../src/",
    "boot":"../src/scripts/app.js"
  },
  "styles":
  {
    "path":"../src/styles",
    "boot":"../src/styles/app.styl"
  },
  "sprites":
  {
    "src":"../src/images/icons/*.png",
    "img_name":"images/icons.png",
    "img_dest":"../public",
    "css_name":"sprite.styl",
    "css_dest":"../src/styles/shared/"
  },
  "images":
  {
    "src":"../src/images/**/*",
    "img_name":"images/icons.png",
    "img_dest":"../public",
    "css_name":"sprite.styl",
    "css_dest":"../src/styles/shared/"
  }
}
